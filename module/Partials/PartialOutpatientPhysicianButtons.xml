<partial>
  <!-- Partial Outpatient Physician Buttons -->
  <!-- (Buttons display on the right side of the screen from patient info) -->
  <row>
    <!-- Update the patient demographic data -->
    <control type="button" 
      name="Consult_PatientUpdate" 
      span="12" 
      label="Update"	
      affector="none"
      capture="PatientInfo" 
      icon="cloud-upload"
      action="save|close|new"
      confirm="Please confirm you want to update this patient."	
      appendconfirm="runinput=[Consult_AccountNumber]"
      confirmresponse="CheckDigitResult=true|Invalid National ID!"
      dataupdate="UpdatePatient"
      appendupdate="PatientId=[PatientId]"
      provoke="PatientList"/>
  </row>
  <row name="rowAdmitPatients" reveal="[HasOpenVisit]=false">
    <!-- Admit patient with no current visit -->
    <control type="button" 
      name="btnAdmitButton"
      span="12"
      color="green"
      tooltip="Click to enter this patient."	 
      action="save|close|new" 
      confirm="Please confirm you want to admit this patient. Reminder: if this patient has an appointment,please admit him / her through the appointment option to complete the appointment."
      affector="PatientVisitGuid"
      setaffector="RecordUniqueId"
      label="Admit"	 
      icon="cloud-upload"
      datainsert="InsertPatientVisitAllFields"
      appendinsert="patientId=[PatientId],visitType=[DefaultAdmitType],hospitalService=Waiting,ambulatoryStatus=Ambulatory
      ,preAdmit=0,departmentGuid=[DepartmentGuidLookup],admitDateTime=(dateTimeNow)"
      set="HasOpenVisit=true,PatientVisit=[PatientVisitGuid]"
      provoke="PatientList"/>
  </row>
  <row>
    <control type="button" name="btnReports"
       reveal="[PatientId]!"
      span="12"
      icon="print" label="Reports"	
      preset="Report_PatientId=[PatientId],Report_Type=Patient,Report_PatientFirstName=[Consult_PatientFirstName],Report_PatientMiddleName=[Consult_PatientMiddleName],Report_PatientLastName=[Consult_PatientLastName]"
      trigger="ReportList,Report_VisitId"
      action="redirect" target="mdlReports"/>
  </row>
  <row name="rowSendText" reveal="[Consult_PatientCellPhone]!">
    <control type="button" name="btnSendTextMessage2"  
      span="12" icon="envelope" label="Text"	
      preset="phoneNumber=[Consult_PatientCellPhone]"
      trigger="grdPhysicianMessages2"
      action="redirect" target="mdlSendTextMessage"/>
  </row>
  <row name="rowSendEmail" reveal="[Consult_PatientEmail]!">
    <control type="button" name="btnSendEmailMessage2"
      span="12" icon="envelope" label="Email"			
      preset="Send_EmailAddress=[Consult_PatientEmail],Send_PatientId=[PatientId]"
      trigger="grdPhysicianMessages1"
      action="redirect" target="mdlSendEmailMessage"/>
  </row>
  <row name="rowECDForms" reveal="HasOpenVisit=true">
    <!-- ECD button to load ECD list -->
    <control type="button" name="btnNewCEDForms"
      span="12" color="green"
      onclose="Advertencia: No ha guardado este documento. ¿Todavía quiere salir?"
      action="redirect|url" 
      target="ecd/index.html" 
      usesource="login"
      append="patientid=[PatientId],patientvisit=[PatientVisitGuid]"
      label="Forms"	
      icon="hand-right"
      provoke="ButtonGroupSelect"/>
  </row>
  <row> 
    <!-- Display the patient timeline -->
    <control type="button" name="btnTimeline"
        reveal="[HasOpenVisit]=true"
        span="12"
        color="yellow" icon="time" 
        label="Timeline"	
        action="redirect|view"
        target="timeline"
        append="patientid=[PatientId],patientvisit=[PatientVisitGuid],distinct=true"/>
  </row>
  <row>
    <!-- Enter new bed request -->
    <control type="button" name="btnBedRequest"
      span="12" icon="plus" label="Hospitalization"	
      color="orange"
      action="redirect"
      trigger="GetPatientForBed,Nrq_PrimaryDiagnosis"
      target="mdlBedRequest"/>
  </row>
  <row> 
    <!-- Enter new consult request -->
    <control type="button" name="btnConsultRequest"
      span="12" icon="plus" label="Interconsult"	
      color="orange"
      action="redirect"
      target="NewConsultModal"
      preset="InterConsult_PatientId=[PatientId]"
      trigger="InterConsult_PatientId"/>
  </row>
  <row>
    <!-- Enter new physical chart request -->
    <control type="button" name="btnChartRequest"
      span="12" icon="plus" label="Physical Record"	
      color="orange"
      action="redirect"
      target="mdlDocumentRequest"
      preset="DocumentPatientId=[PatientId],Document_DepartmentGuid=[DepartmentGuidLookup]"
      trigger="DocumentPatientId"/>
  </row>
  <row>
    <!-- Enter new surgery request -->
      <control type="button" 
      name="NewSurgeryRequestButton"
      label="Surgery"	
      span="12" icon="plus" color="orange"
      action="redirect"
      target="NewSurgeryRequestModal"
      preset="SurgeryRequest_PatientId=[PatientId]"
      trigger="SurgeryRequest_PatientId"/>
  </row>
  <row name="rowReadyForDischarge" reveal="HasOpenVisit=true">
    <!-- Set/unset ready for discharge -->
    <control type="button" name="btnAltaMedica"
      reveal="[ReadyForDischarge]=true"
      span="12" icon="cloud-upload" label="Medical Discharge"	
      color="green" action="redirect"
      preset="Ready_PatientId=[PatientId],Ready_PatientVisitGuid=[PatientVisitGuid]"
      trigger="GetReadyForDischarge"
      target="mdlReadyForDischarge"/>
    <control type="button" name="btnNoAltaMedica"
      reveal="[ReadyForDischarge]=false"
      span="12" icon="cloud-upload" label="Medical Discharge"	
      color="grey" action="redirect"
      preset="Ready_PatientId=[PatientId],Ready_PatientVisitGuid=[PatientVisitGuid]"
      trigger="GetReadyForDischarge"
      target="mdlReadyForDischarge"/>
  </row>
  <row name="rowMovePatient" reveal="HasOpenVisit=true">
    <control type="button" name="btnMove"
      span="12" icon="move" label="Move"	
      color="green"
      action="redirect"
      target="mdlMovePatient"/>
  </row>
  <row name="rowAuditPatient" reveal="HasOpenVisit=true">
    <control type="button" name="btnAuditPatient"
      span="12" icon="search" label="Audit"	
      action="redirect"
      trigger="grdPatientChartAudit"
      target="mdlChartAudit"/>
  </row>
</partial>